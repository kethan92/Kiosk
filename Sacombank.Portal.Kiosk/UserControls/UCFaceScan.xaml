<UserControl x:Class="Sacombank.Portal.Kiosk.UserControls.UCFaceScan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sacombank.Portal.Kiosk.UserControls"
             mc:Ignorable="d" d:DesignWidth="800" Height="477">
    <Grid Name="girdMain" Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="357*"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Black">
            <Image Grid.Row="0" x:Name="WebcamViewer" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        </Grid>
        <TextBlock Grid.Row="0" x:Name="textConnectCam" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20">"Đang kết nối đến camera..."</TextBlock>
        <Button Grid.Row="1" x:Name="btnStartCamera" Click="btnStartCamera_Click" Content="Bắt đầu" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Width="800" Height="83" />
    </Grid>
</UserControl>
